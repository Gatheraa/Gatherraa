# Core
DB_TYPE=sqlite
DATABASE_PATH=./app/backend/database.sqlite
DATABASE_URL=

# AWS backup storage
AWS_REGION=us-east-1
AWS_SECONDARY_REGION=us-west-2
S3_BACKUP_BUCKET=gatheraa-backups-primary
S3_BACKUP_PREFIX=gatheraa
S3_CONFIG_BUCKET=
CROSS_REGION_BACKUP_BUCKET=gatheraa-backups-secondary

# Source file storage (for image-service uploads)
S3_FILE_STORAGE_BUCKET=gatheraa-assets
S3_FILE_STORAGE_PREFIX=uploads

# Encryption
BACKUP_ENCRYPTION_KEY=change-me
BACKUP_KMS_KEY_ID=

# Monitoring
PROMETHEUS_PUSHGATEWAY=http://pushgateway:9091
BACKUP_RETENTION_DAYS=30
